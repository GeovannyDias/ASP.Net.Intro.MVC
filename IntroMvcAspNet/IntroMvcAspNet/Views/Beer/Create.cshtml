@using IntroMvcAspNet.Models.ViewModels
@model BeerViewModel
<h1>Add Breer</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-grup">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control "/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-grup">
                <label asp-for="BrandId" class="control-label"></label>
                <select value="" asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands">
                    <option value="" disabled selected>Please select one</option>
                </select>
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>
            <div class="form-grup mt-2">
                <input type="submit" value="Add Beer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@*Colocar código JavaScript*@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}

